{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
		"jsx": "preserve",
		"types": [
			"node",
			"vue"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
    "lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
    ]
  },
  "include": [
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
